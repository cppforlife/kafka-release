---
name: kafka

templates:
  bpm.yml: config/bpm.yml
  start: bin/start
  log4j.properties: config/log4j.properties
  server.properties: config/server.properties

consumes:
- name: zookeeper
  type: zookeeper

provides:
- name: broker
  type: kafka-broker
  properties:
  - port

packages:
- kafka
- openjdk-1.8

properties:
  port:
    description: "Listener port"
    default: 9092
  heap_opts:
    description: "Heap options"
    default: "-Xmx1G -Xms1G"
